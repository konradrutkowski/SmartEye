<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginBottom="60dp"

        android:contentDescription="heheszkowo"

        />

            <HorizontalScrollView

                android:id="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_alignParentBottom="true"
                android:scrollbars="none" >
                <RelativeLayout
                    android:background="@color/divider"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    >
            <Button
                android:id="@+id/b1"
                android:background="@color/bars"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Brightness"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="1dp"
                android:text="Jasność"/>
                <Button
                    android:id="@+id/b2"
                    android:background="@color/bars"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/b1"
                    android:onClick="Sharp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="1dp"
                    android:text="Wyostrzanie" />


                    <Button
                    android:id="@+id/b3"
                    android:background="@color/bars"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/b2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="1dp"
                    android:text="Kolory"
                    android:onClick="ColorUp"/>
                <Button

                    android:id="@+id/b4"
                    android:background="@color/bars"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/b3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="1dp"
                    android:text="Rozmywanie"/>

                    <Button
                        android:id="@+id/b5"

                        android:background="@color/bars"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/b4"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:onClick="GammaCorrection"
                        android:text="Kontrast"/>
                </RelativeLayout>
            </HorizontalScrollView>
    </RelativeLayout>